@model Product

@{
    ViewData["Title"] = "Product Detail";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
           @if (Model.UpdatedDate!=null)
           {
               @Model.UpdatedDate.Value.ToLongDateString()
            }
            else
            {
                <span>-</span>
            }
        </dd>
        <dt class = "col-sm-2">
          Created Date
        </dt>
        <dd class="col-sm-10">
           @Model.CreatedDate.ToLongDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Product" asp-action="Index">Back to List</a>
</div>